<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MotivationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dumbel">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="“If you want something you've never had, you must be willing to do something you've never done.”"
            android:layout_gravity="center"
            android:textSize="40dp"
            android:textFontWeight="@android:integer/config_shortAnimTime"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"/>
    </LinearLayout>


</FrameLayout>